<% provide(:title, (t :sessions_new_title)) %>
<% meta description: (t :description_sessions_new) %>
<div class="form-panel">
	<div class="form-panel-heading">
		<h1 class="text-center title-blue"><%= t(:sessions_new_title) %></h1>
	</div>
	
	<div class="form-panel-body">
		<p class='form-errors text-center'></p>
		<%= simple_form_for(:session, url: sessions_path, html: {id: 'sessions_new'}, defaults: { input_html: { class: "input-default" } })  do |f| %>
			<%= f.input :email, autofocus: true %>
			<%= f.input :password, input_html: {id: "password"} %>
			<%= f.check_box :remember_me, class: "checkbox" %>
			<span><%= (t :sessions_new_remember) %></span>
			<br/>
		<%= f.button :submit, (t :sessions_new_btn), class: 'btn btn-default-submit btn-primary', id: 'sessions_new_submit' %>
		<% end %><br/>
		
		<div class="text-center"><br/>
			<p><%= (t :sessions_new_noaccount) %><p>
				<%= link_to (t :sessions_new_createaccount), signup_path, class: 'btn btn-default btn-transparent' %>
		</div>
	</div>

	<div class="form-panel-footer">
		<p class="forgot-password">
			<%= link_to (t :sessions_new_forgot), new_password_reset_path, class: 's-hover-link' %>
		</p>
		<p class="forgot-password">
			<%= link_to 'Geen account activatie instructies ontvangen?', new_account_activation_path, class: 's-hover-link' %>
		</p>
	</div>
</div>
