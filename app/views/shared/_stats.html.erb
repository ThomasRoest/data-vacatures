<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" class="s-hover-link">
    <strong id="following" class="stat s-hover-link">
      <%= @user.followed_users.count %>
     
    </strong>
      <%= (t :user_stats_following) %>
   
  </a>
  <a href="<%= followers_user_path(@user) %>" class="s-hover-link">
    <strong id="followers" class="stat s-hover-link">
      <%= @user.followers.count %>

    </strong>
    <%= (t :user_stats_followers) %>
  </a>
</div>