<% provide(:title, (t :users_edit_title)) %>
<div class="form-panel">
	<div class="form-panel-heading">
		<div class="center">
	    <%= image_tag @user.avatar.url(:thumb), class: "img-small img-round"  %>
	  </div>
		<h1 class="text-center title-form"><%= (t :users_edit_title)%></h1>
	</div>
	<div class="form-panel-body">
		<p class='timestamp'>Account: <%= @user.email %></p><br>
		<%= simple_form_for @user, defaults: { input_html: { class: 'input-default' } } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.input :name, autofocus: true %>
			<%= f.input :password, label: 'Nieuw wachtwoord instellen (minimaal 6 tekens)', input_html: {id: "password"} %>
			<%= f.input :password_confirmation, input_html: {id: "confirm_password"} %>
			<%= f.input :university, input_html: { maxlength: 200 } %>
			<%= f.input :avatar %>

			<div class="center">
				<%= f.button :submit, class: "btn btn-default-submit btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
		







