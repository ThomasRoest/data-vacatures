<div class="box l-generic">
	<ul class="sales-show">
		
   <table class="table-show-sub">
     <tr>
      <th>Key</th>
      <th>Value</th>
     </tr>
     <% @subscription.attributes.sort.each do |key, value| %>
       <tr>
         <td><%= key %></td>
         <td><%= value %></td>
       </tr>
     <% end %>
  </table>
  <hr>
  <p>
    
     <% if @sub_job %>
     <h1>Job listing: <%= link_to @sub_job.title.html_safe, job_path(@sub_job.id) %></h1>
     <% end %>
    
  </p>

  <hr>

<table class="table-show-sub">
  <thead>
    <tr>
      <th>Timestamp</th>
      <th>Event</th>
      <th>Changes</th>
    </tr>
 </thead>

 <tbody>
   <% @subscription.versions.each do |version| %>
    <tr>
      <td><%= version.created_at %></td>
      <td><%= version.event %></td>
      <td>
        <% version.changeset.sort.each do |key, value| %>
          <b><%= key %></b>: <%= value[0] %> to <%= value[1] %><br>
        <% end %>
      </td>
    </tr>
   <% end %>
 </tbody>

</table>


 		<li>

     <h3><%= link_to 'View customer in stripe', "https://manage.stripe.com/customers/#{@user.stripe_customer_id}" %></h3>
 		</li>
	</ul>
	<hr>
	<%= link_to 'Back', overview_path %>
</div>


