<% provide(:title, (t :password_resets_title)) %>
<div class="form-container">
	<h1 class="text-center"><%= (t :password_resets_new_password) %></h1>
	  
	  <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, "Nieuw wachtwoord" %>
      <%= f.password_field :password, class: 'input-deafult' %>

      <%= f.label :password_confirmation, "Bevestig nieuw wachtwoord" %>
      <%= f.password_field :password_confirmation, class: 'input-deafult' %>

      <%= f.submit "Nieuw wachtwoord instellen", class: "btn btn-default-submit btn-primary" %>
    <% end %>

</div>


